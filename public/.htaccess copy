# Ativa o mecanismo de reescrita do Apache
RewriteEngine On

# Define o caminho base para todas as regras
RewriteBase /guloseimas_do_olimpophp/public/

# Se o arquivo ou diretório solicitado não existir, aplica a reescrita
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Reescreve todas as requisições para o index.php com o parâmetro 'url'
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Redireciona qualquer requisição para o diretório público para a URL correta
RewriteCond %{REQUEST_URI} ^/guloseimas_do_olimpophp/public
RewriteRule ^(.*)$ /guloseimas_do_olimpophp/public/$1 [R=301,L]
